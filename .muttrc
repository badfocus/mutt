# Identity -------------------------------------------
set from             = "user@domain.com"
set realname         = "Real Name"
set use_from         = yes
set envelope_from    = yes
set signature        = ~/.mutt/sig             # my signature file

# Paths ----------------------------------------------
set folder           = /Volumes/Personal/.mail # mailbox location
set alias_file       = ~/.mutt/aliases         # where to store aliases
set header_cache     = ~/.mutt/cache/headers   # where to store headers
set message_cachedir = ~/.mutt/cache/bodies    # where to store bodies
set certificate_file = ~/.mutt/certificates    # where to store certs
set mailcap_path     = ~/.mutt/mailcap         # entries for filetypes
set tmpdir           = ~/.mutt/temp            # where to keep temp files

# Aliases --------------------------------------------
set sort_alias = alias
set reverse_alias = yes
source $alias_file

# Account Settings -----------------------------------
# Default inbox.
set spoolfile = "+first.last-gmail.com/INBOX"

# Alternate email addresses.
alternates first@last.com

# Mailboxes to show in the sidebar.
mailboxes +first.last-gmail.com/INBOX \
          +first.last-gmail.com/archive \
          +first.last-gmail.com/sent \
          +first.last-gmail.com/drafts \

# Other special folders.
set mbox      = "+first.last-gmail.com/archive"
set postponed = "+first.last-gmail.com/drafts"

# Basic Options --------------------------------------
set wait_key = no        # shut up, mutt
set mbox_type = Maildir  # mailbox type
set timeout = 3          # idle time before scanning
set mail_check = 0       # minimum time between scans
unset move               # gmail does that
unset confirmappend      # don't prompt every time we append to mailbox
unset mark_old           # read/new is good enough for me
set beep_new             # bell on new mails
set pipe_decode          # strip headers and eval mimes when piping
set thorough_search      # strip headers and eval mimes before searching
set markers = no
set sort = threads
set sort_aux = last-date-received

# Header Options -------------------------------------
ignore *                                # ignore all headers
unignore date: from: to: cc: subject:   # show only these
unhdr_order *                           # some distros order things by default
hdr_order date: from: to: cc: subject:  # and in this order

# Keybindings ----------------------------------------
bind editor <space> noop
macro index gi "<change-folder>=first.last-gmail.com/INBOX<enter>" "Go to Inbox"
macro index ga "<change-folder>=first.last-gmail.com/archive<enter>" "Go to All Mail"
macro index gs "<change-folder>=first.last-gmail.com/sent<enter>" "Go to Sent Mail"
macro index gd "<change-folder>=first.last-gmail.com/drafts<enter>" "Go to Drafts"

# Status Bar -----------------------------------------
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# Colors ----------------------------------------------
color attachment    brightmagenta   default
color error         brightred       default
color hdrdefault    red             default
color indicator     brightyellow    red
color markers       brightcyan      default
color message       brightcyan      default
color normal        default         default
color quoted        brightblue      default
color search        default         green
color signature     red             default
color status        yellow          blue
color tilde         magenta         default
color tree          magenta         default

# Editor ----------------------------------------------
set editor='vim + -c "set textwidth=72" -c "set wrap" -c "?^$"'

source ~/.mutt/crypto
